<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0.0dip" />
            <gradient android:startColor="@color/mainContent" android:endColor="@color/mainProBk"
                android:centerColor="@color/mainProBk"  android:angle="270.0" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="#ffffff" android:endColor="#444444"
                    android:centerColor="#ffffff" android:angle="270.0" />
            </shape>
        </clip>
    </item>
</layer-list>