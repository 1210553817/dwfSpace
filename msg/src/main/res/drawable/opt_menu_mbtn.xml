<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/lightGreen" />
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <item android:bottom="1px" android:top="1px" android:left="1px" android:right="1px">
                <shape>
                    <solid android:color="#ffeeeeee" />
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <item android:bottom="2px" android:top="2px" android:left="2px" android:right="2px">
                <shape>
                    <gradient android:angle="270.0" android:startColor="#ffffffff" android:endColor="#ffffffff"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/lightGreen1" />
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <item android:bottom="1px" android:top="1px" android:left="1px" android:right="1px">
                <shape>
                    <solid android:color="#ffeeeeee" />
                    <corners android:radius="30dp"/>
                </shape>
            </item>
            <item android:bottom="2px" android:top="2px" android:left="2px" android:right="2px">
                <shape>
                    <gradient android:angle="270.0" android:startColor="#ffffffff" android:endColor="#ffeeeeee"/>
                    <corners android:radius="30dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>