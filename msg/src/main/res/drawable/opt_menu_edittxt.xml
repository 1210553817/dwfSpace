            </item>
            <item android:bottom="2px" android:top="2px" android:left="2px" android:right="2px">
                <shape>
                    <corners android:radius="3dp"/>
                    <gradient android:angle="45" android:startColor="#ffefefef" android:endColor="#ffffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>
