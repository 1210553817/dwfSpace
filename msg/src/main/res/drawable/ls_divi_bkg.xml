<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item >
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="0.0" android:startColor="#fff5f5f5" android:centerColor="#ffdddddd" android:endColor="#fff5f5f5"/>
                </shape>
            </item>
            <item android:top="1px">
                <shape>
                    <gradient android:angle="0.0" android:startColor="#ffdddddd" android:centerColor="#ffdddddd" android:endColor="#ffdddddd"/>
                </shape>
            </item>
            <item android:left="1px" android:top="1px" android:right="1px" android:bottom="1px">
                <shape  android:shape="oval">
                    <solid android:color="#00ffffff"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>